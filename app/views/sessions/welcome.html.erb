<div class="container d-flex justify-content-center">
  <div class="row">
    <div class="col-md-12">
      <% if current_user %>
        <h1>Welcome, <span class="text-success"><%= current_user.username %></span></h1>
        <%= link_to "Edit Account", edit_user_path(current_user), class: 'btn btn-dark text-decoration-none' %>
        <%= link_to "Delete Account", current_user, data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-dark text-decoration-none' %>
      <% else %>
        <!-- Display a message or redirect to the login page if the user is not logged in -->
        <p>Please log in to view your account information.</p>
        <%= link_to "Log In", login_path, class: 'btn btn-dark text-decoration-none' %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <h4>Edit your Account Details</h4>

      <%= form_with model: @user, local: true do |f| %>
        <%= f.label :username %><br>
        <%= f.text_field :username, autofocus: true, class: 'form-control mb-3' %>

        <%= f.label :password %><br>
        <%= f.password_field :password, class: 'form-control mb-3' %>

        <!-- Add an admin checkbox field -->
        <div class="form-check mb-3">
          <%= f.label :admin, class: 'form-check-label' %>
          <%= f.check_box :admin, class: 'form-check-input' %>
        </div>

        <%= f.submit "Confirm Changes", class: 'btn btn-success btn-small mr-2' %>

        <%= link_to "Cancel", user_path(@user), class: 'btn btn-secondary btn-small' %>
      <% end %>
    </div>
  </div>
</div>
